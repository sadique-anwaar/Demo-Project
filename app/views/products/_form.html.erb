  <div>
    <div id = "div1" class="container">
      <%= form_with(model: product, local: true) do |form| %>
        <% if product.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

            <ul>
            <% product.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
      
      <div class="jumbotron">
        <form>
          <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, autofocus: true, class: "form-control",
            placeholder: "Product Name", required: true  %>
          </div>

          <div class="field">
            <%= form.label :price %>
            <%= form.number_field :price, class: "form-control", placeholder: "Product Price", required: true  %>
          </div>

          <div class="field">
            <%= form.label :quantity %>
            <%= form.number_field :quantity, class: "form-control", placeholder: "Product Quantity", required: true  %>
          </div>

          <div class="form-group">
            <label class="btn btn-info btn-product-image"><i class="fa fa-upload" aria-hidden="true"></i>  Images
                <% if product.images.empty? %>
                  <%= form.file_field :images, required: true, multiple: true %>
                <% else %>
                  <%= form.file_field :images, multiple: true %>
                <% end %>
            </label>
            <small  class = "form-text text-muted" >This product has <%= product.images.count %> pictures uploaded.</small>
          </div>
          

      
          <div class="form-group shadow-textarea">
            <label for="exampleFormControlTextarea6">Product Description</label>
            <%= form.text_area :description, class: "form-control z-depth-1", id: "exampleFormControlTextarea6", rows: "3", placeholder: "Write something here...", required: true  %>
          </div>


          <div class="actions">
            <%= form.submit "Save", class: "btnButton" %>
          </div>

         </form>
      </div>
    </div>
  </div>

<% end %>
