

<%= form_with(model: [ @product, @product.comments.build ], remote: true) do |form| %>

  <div class="tab-pane" id="add-comment">
                    <form action="#" method="post" class="form-horizontal" id="commentForm" role="form"> 
                        <div class="form-group">
                            <div class="col-sm-10">
                            <%= form.text_area :body, class: 'form-control', autofocus: true, :id => 'addComment' , rows:'5' %>
                            </div>
                            <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">     
                                <%= form.submit "Submit Comment", class: 'btn btn-success text-uppercase'%>
                            </div>
                        </div>   
                        </div>
                                 
                    </form>
    </div>
<% end %>