<div >
  <div class="tab-pane active" id="comment_<%= comment.id %>">                
    <ul class="media-list">
      <li class="media">
        <a class="pull-left" href="#">
        	<%= image_tag(comment.user.avatar, class: "media-object img-circle" )%>
          
        </a>
        <div class="media-body">
          <div class="well well-lg">
            <h4 class="media-heading text-uppercase reviews"><%=comment.user.name %></h4>
            <ul class="media-date text-uppercase reviews ">
              <%= time_ago_in_words(comment.updated_at) %> ago
            </ul>
            <p class="media-comment">
              <%= comment.body %>
            </p>
            <div class="comment_delete">
              <% if comment.user == current_user %>
                <%= link_to 'Delete', [comment.product, comment], class: "btnButton",
                 method: :delete,
                 data: { confirm: 'Are you sure?', remote: true } , id: "delete" %>
              <% end %>
            </div>
          </div>              
        </div>
      </li>
    </ul> 
  </div>
</div>